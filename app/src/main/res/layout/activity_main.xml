            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:padding="4dp"
            android:text="@string/Q8" />

        <CheckBox
            android:id="@+id/physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/A8_1" />

